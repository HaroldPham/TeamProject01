import java.util.*;
import java.io.*;

public class GenealogySort{
   public static void main(String[] args) throws FileNotFoundException{
      File names = new File("tudor.dat");
      Scanner console = new Scanner(System.in); 
      boolean exit = false; //declared false until user exits the program  
      Person(console);
   }
   
   //Prompts the user
   public static void searchPrompt(Scanner console) throws FileNotFoundException {
         System.out.println("Person's name? (quit to exit): "); 
         String name = console.next().toLowerCase(); 
         while (!name.equals("quit")) {
            name = name.substring(0,1).toUpperCase() + name.substring(1,name.length());
            if (ScannerArraylist.contains(name)){
               sort(name);
            } else {
               System.out.println("Name not found. Try again!");
            }
            System.out.println("Person's name? (quit to exit): ");
            name = console.next().toLowerCase();
         }
         System.out.println("Thank you for using our program!");
    }
    
    public void sort (name) {
      Person i = new Person (name)
      System.out.println("Maternal Line:");
         name.getMother();
      System.out.println("Paternal Line:");
         name.getFather();
      System.out.println("Children:");
         name.getChildren();
    }

   public ArrayList<Person> readFile (Scanner console)
      ArrayList<Person> names = new ArrayList<Person>();
      String persons;

      while (console.hasNextLine()) {
         persons = console.nextLine();
         if (persons.toLowerCase().equals("end")) {
            break;
         } else if (persons.length() < 1) {
            continue; 
         }
         Person j = new Person(persons);
         
         people.add(j);
      }
      
      
